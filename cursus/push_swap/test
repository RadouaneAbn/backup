#!/bin/bash

#!/bin/bash

generate_random_numbers() {
    local n=$1
    local result=""

    for ((i = 0; i < n; i++)); do
        local num=$((RANDOM % 100))  # Generate a random number between 0 and 99
        local sign=$((RANDOM % 2))  # Randomly choose a sign (0 for negative, 1 for positive)
        if ((sign == 0)); then
            num=$((-num))  # Make the number negative
        fi
        result+="$num "
    done

    echo "$result"
}

# Check if the argument is provided
if [[ -z $1 ]]; then
    echo "Usage: $0 <number_of_random_numbers>"
    exit 1
fi

n=$1  # Number of random numbers passed as an argument
iterations=10  # Number of times to run push_swap (can also be passed as an argument if needed)
i=0

while ((i < iterations)); do
    random_numbers=$(generate_random_numbers "$n")  # Generate a string of random numbers
    echo "$((i + 1)): Running push_swap with: $random_numbers"
    result=$(./push_swap $random_numbers)  # Run push_swap with the generated numbers
    echo "The moves the stack needed to get sorted:"
    echo -e "$result\n"
    # echo "moves count: $(echo "$result" | wc -l) "

    ((i++))
done
